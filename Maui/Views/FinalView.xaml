<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Maui.ViewModels"
             x:Class="Maui.Views.FinalView"
             BackgroundColor="#121212"
             Padding="30">

    <ContentPage.BindingContext>
        <vm:FinalVM />
    </ContentPage.BindingContext>

    <VerticalStackLayout Spacing="25" HorizontalOptions="Center" VerticalOptions="Center">

        <!-- Título -->
        <Label Text="Resumen de la Partida"
               FontSize="32"
               FontAttributes="Bold"
               TextColor="#FFD700"
               HorizontalOptions="Center"/>

        <BoxView HeightRequest="2" BackgroundColor="#FFD700" WidthRequest="80" HorizontalOptions="Center"/>

        <!-- Estadísticas -->
        <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
            <Label Text="Partidas Jugadas"
                   FontSize="18"
                   TextColor="White"
                   HorizontalOptions="Center"/>
            <Label Text="{Binding PartidasJugadas}"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#FFD700"
                   HorizontalOptions="Center"/>

            <HorizontalStackLayout Spacing="30">
                <VerticalStackLayout HorizontalOptions="Center">
                    <Label Text="Tus Puntos"
                           FontSize="18"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Label Text="{Binding PuntosJugador}"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#4CAF50"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <VerticalStackLayout HorizontalOptions="Center">
                    <Label Text="Puntos Rival"
                           FontSize="18"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Label Text="{Binding PuntosEnemigo}"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="Red"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <BoxView HeightRequest="2" BackgroundColor="#FFD700" WidthRequest="80" HorizontalOptions="Center"/>

        <!-- Mensaje del ganador -->
        <Frame CornerRadius="15" Padding="20" BackgroundColor="#222"
               BorderColor="#FFD700" HasShadow="True">
            <Label Text="{Binding MensajeGanador}"
                   FontSize="22"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Frame>

        <!-- Botones -->
        <HorizontalStackLayout Spacing="20">
            <Button Text="Volver al inicio"
                    Command="{Binding CmdVolver}"
                    BackgroundColor="#007ACC"
                    TextColor="White"
                    FontSize="18"
                    Padding="15"
                    CornerRadius="12"
                    WidthRequest="150"/>

            <Button Text="Revancha"
                    Command="{Binding CmdRevancha}"
                    BackgroundColor="Orange"
                    TextColor="White"
                    FontSize="18"
                    Padding="15"
                    CornerRadius="12"
                    WidthRequest="150"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
