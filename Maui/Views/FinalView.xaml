<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Maui.ViewModels"
             x:Class="Maui.Views.FinalView"
             BackgroundColor="#1E1E1E">

    <ContentPage.BindingContext>
        <vm:FinalVM />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="30" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">

        <Label Text="Resultado de la partida"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="#FFD700"
               HorizontalOptions="Center"/>

        <Frame CornerRadius="15" Padding="20" BackgroundColor="#333">
            <Label Text="{Binding Jugador.Nombre}"
                   FontSize="22"
                   TextColor="#FFFFFF"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
        </Frame>

        <Frame CornerRadius="15" Padding="20" BackgroundColor="#444">
            <Label Text="{Binding MensajeGanador}"
                   FontSize="20"
                   TextColor="#FFFFFF"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"/>
        </Frame>

        <Button Text="Volver al inicio"
                Command="{Binding CmdVolver}"
                BackgroundColor="#007ACC"
                TextColor="White"
                FontSize="18"
                Padding="15"
                CornerRadius="10"/>
    </VerticalStackLayout>
</ContentPage>
