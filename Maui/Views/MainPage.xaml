<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Views.MainPage"
             xmlns:vm="clr-namespace:Maui.ViewModels"
             BackgroundColor="#DCF2F1"
             Padding="20">

    <ContentPage.BindingContext>
        <vm:EntrarPartidaVM />
    </ContentPage.BindingContext>

    <Grid>
        <!-- Imagen de Fondo -->
        <Image Source="tiracuerda.png"
               Aspect="AspectFill"
               Opacity="0.1"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"
               AbsoluteLayout.LayoutFlags="All"
               AbsoluteLayout.LayoutBounds="0,0,1,1" />

        <ScrollView>
            <VerticalStackLayout Spacing="25">
                <!-- Título -->
                <Label Text="Tirar la cuerda"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="#0A3871"
                       HorizontalOptions="Center" />

                <Label Text="Ingresa el código de la partida"
                       FontSize="18"
                       TextColor="#444"
                       HorizontalOptions="Center" />

                <!-- Entradas -->
                <Frame BackgroundColor="White"
                       CornerRadius="15"
                       Padding="20"
                       HasShadow="True"
                       Opacity="0.98">
                    <VerticalStackLayout Spacing="15">
                        <Entry Text="{Binding Grupo}"
                               Placeholder="Código de la partida"
                               PlaceholderColor="#777"
                               FontSize="18"
                               BackgroundColor="#EEF7FF"
                               HorizontalOptions="FillAndExpand" />

                        <Entry Text="{Binding Nombre}"
                               Placeholder="Nombre"
                               PlaceholderColor="#777"
                               FontSize="18"
                               BackgroundColor="#EEF7FF"
                               HorizontalOptions="FillAndExpand" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Botones -->
                <VerticalStackLayout Spacing="14">
                    <Button Text="Entrar"
                            Command="{Binding CmdUnirGrupo}"
                            BackgroundColor="#007AFF"
                            TextColor="White"
                            FontSize="20"
                            Padding="16"
                            CornerRadius="14"
                            HorizontalOptions="FillAndExpand" />

                    <Button Text="Salir"
                            Command="{Binding CmdSalirGrupo}"
                            BackgroundColor="#D32F2F"
                            TextColor="White"
                            FontSize="20"
                            Padding="16"
                            CornerRadius="14"
                            HorizontalOptions="FillAndExpand" />

                    <Button x:Name="BotonListo"
                        Text="Listo"
                        Command="{Binding CmdPreparado}"
                        BackgroundColor="Purple"
                        TextColor="White"
                        FontSize="20"
                        Padding="16"
                        CornerRadius="14"
                        HorizontalOptions="FillAndExpand">
                    </Button>



                </VerticalStackLayout>

                <!-- Lista de Jugadores -->
                <Label Text="Jugadores en la partida:"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#0A3871"
                       HorizontalOptions="Start" />

                <Frame BackgroundColor="White"
                       CornerRadius="15"
                       Padding="12"
                       HasShadow="True"
                       Opacity="0.98">
                    <ListView ItemsSource="{Binding Jugadores}" BackgroundColor="White">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Padding="12">
                                        
                                        <!-- Label del Nombre -->
                                        <Label Text="{Binding Nombre}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="Red">

                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label" Binding="{Binding Listo}" Value="True">
                                                    <Setter Property="TextColor" Value="Green"/>
                                                </DataTrigger>
                                            </Label.Triggers>
                                            
                                        </Label>
                                        
                                        <!-- Label del Nombre -->
                                        <Label Text="Listo"
                                           FontSize="14"
                                           TextColor="Red">

                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label" Binding="{Binding Listo}" Value="True">
                                                    <Setter Property="TextColor" Value="Green"/>
                                                </DataTrigger>
                                            </Label.Triggers>

                                        </Label>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </Frame>

                <!-- Mensaje de Error -->
                <Label Text="{Binding LlenoORepetido}"
                       FontSize="16"
                       TextColor="#D9534F"
                       HorizontalOptions="Center"
                       FontAttributes="Bold" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
