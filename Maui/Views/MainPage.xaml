<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Views.MainPage"
             xmlns:vm="clr-namespace:Maui.ViewModels">

    <ContentPage.BindingContext>
        <vm:EntrarPartidaVM></vm:EntrarPartidaVM>
    </ContentPage.BindingContext>


    <VerticalStackLayout>
        <Label Text="Tirar la cuerda" FontSize="Header" HorizontalOptions="Center" Margin="0,20,0,0"></Label>
        <Label Text="Ingresa el código de la partida" FontSize="Body" HorizontalOptions="Center" Margin="0,20,0,0"></Label>
        <Entry Text="{Binding Grupo}" Placeholder="Código de la partida" HorizontalOptions="Center" Margin="0,20,0,0"></Entry>
        <Entry Text="{Binding Nombre}" Placeholder="Nombre" HorizontalOptions="Center" Margin="0,20,0,0"></Entry>
        <Button Text="Entrar" Command="{Binding CmdUnirGrupo}" HorizontalOptions="Center" Margin="0,20,0,0"></Button>

        <!-- List of Players -->
        <Label Text="Jugadores:"
               FontSize="Medium"
               HorizontalOptions="Start" />
        <ListView ItemsSource="{Binding Jugadores}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding .}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label Text="{Binding Lleno}" FontSize="Medium" HorizontalOptions="Center" Margin="0,20,0,0"></Label>

    </VerticalStackLayout>



</ContentPage>
