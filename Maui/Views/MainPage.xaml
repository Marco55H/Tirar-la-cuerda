<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Views.MainPage"
             xmlns:vm="clr-namespace:Maui.ViewModels">

    <ContentPage.BindingContext>
        <vm:EntrarPartidaVM />
    </ContentPage.BindingContext>

    <Grid>
        <Image Source="images/tiracuerda.png" Aspect="AspectFill" Opacity="0.3" />

        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Tirar la cuerda"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#333"
                   HorizontalOptions="Center" />

            <Label Text="Ingresa el código de la partida"
                   FontSize="16"
                   TextColor="#555"
                   HorizontalOptions="Center" />

            <Entry Text="{Binding Grupo}"
                   Placeholder="Código de la partida"
                   PlaceholderColor="#aaa"
                   FontSize="14"
                   BackgroundColor="White"
                   HorizontalOptions="FillAndExpand" />

            <Entry Text="{Binding Nombre}"
                   Placeholder="Nombre"
                   PlaceholderColor="#aaa"
                   FontSize="14"
                   BackgroundColor="White"
                   HorizontalOptions="FillAndExpand" />

            <Button Text="Entrar"
                    Command="{Binding CmdUnirGrupo}"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    FontSize="16"
                    Padding="12"
                    CornerRadius="10"
                    HorizontalOptions="FillAndExpand" />

            <!-- List of Players -->
            <Label Text="Jugadores:"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#333"
                   HorizontalOptions="Start" />

            <Frame BackgroundColor="White" CornerRadius="10" Padding="10" HasShadow="True">
                <ListView ItemsSource="{Binding Jugadores}" BackgroundColor="White">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Padding="10">
                                    <Label Text="{Binding Nombre}"
                                           FontSize="16"
                                           TextColor="#333" />
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Frame>

            <Label Text="{Binding LlenoORepetido}"
                   FontSize="14"
                   TextColor="#d9534f"
                   HorizontalOptions="Center" />

            <Image Source="tiracuerda.png"
               Aspect="AspectFit"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>