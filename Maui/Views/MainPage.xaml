<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Views.MainPage"
             xmlns:vm="clr-namespace:Maui.ViewModels"
             BackgroundColor="#E8F0F7"
             Padding="20">

    <ContentPage.BindingContext>
        <vm:EntrarPartidaVM />
    </ContentPage.BindingContext>

    <Grid>
        <!-- Imagen de Fondo -->
        <Image Source="images/tiracuerda.png"
               Aspect="AspectFill"
               Opacity="0.2"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"
               AbsoluteLayout.LayoutFlags="All"
               AbsoluteLayout.LayoutBounds="0,0,1,1" />

        <ScrollView>
            <VerticalStackLayout Spacing="25">
                <!-- Título -->
                <Label Text="Tirar la cuerda"
                       FontSize="30"
                       FontAttributes="Bold"
                       TextColor="#0056b3"
                       HorizontalOptions="Center" />

                <Label Text="Ingresa el código de la partida"
                       FontSize="18"
                       TextColor="#555"
                       HorizontalOptions="Center" />

                <!-- Entradas -->
                <Frame BackgroundColor="White"
                       CornerRadius="12"
                       Padding="20"
                       HasShadow="True"
                       Opacity="0.95">
                    <VerticalStackLayout Spacing="15">
                        <Entry Text="{Binding Grupo}"
                               Placeholder="Código de la partida"
                               PlaceholderColor="#888"
                               FontSize="16"
                               BackgroundColor="#F0F4F8"
                               HorizontalOptions="FillAndExpand" />

                        <Entry Text="{Binding Nombre}"
                               Placeholder="Nombre"
                               PlaceholderColor="#888"
                               FontSize="16"
                               BackgroundColor="#F0F4F8"
                               HorizontalOptions="FillAndExpand" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Botones -->
                <VerticalStackLayout Spacing="12">
                    <Button Text="Entrar"
                            Command="{Binding CmdUnirGrupo}"
                            BackgroundColor="#007AFF"
                            TextColor="White"
                            FontSize="18"
                            Padding="14"
                            CornerRadius="12"
                            HorizontalOptions="FillAndExpand" />

                    <Button Text="Salir"
                            Command="{Binding CmdSalirGrupo}"
                            BackgroundColor="#FF3B30"
                            TextColor="White"
                            FontSize="18"
                            Padding="14"
                            CornerRadius="12"
                            HorizontalOptions="FillAndExpand" />

                    <Button Text="Listo"
                            Command="{Binding CmdPreparado}"
                            BackgroundColor="#34C759"
                            TextColor="White"
                            FontSize="18"
                            Padding="14"
                            CornerRadius="12"
                            HorizontalOptions="FillAndExpand"
                            Clicked="OnButtonClicked" />
                </VerticalStackLayout>

                <!-- Lista de Jugadores -->
                <Label Text="Jugadores en la partida:"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#0056b3"
                       HorizontalOptions="Start" />

                <Frame BackgroundColor="White"
                       CornerRadius="12"
                       Padding="12"
                       HasShadow="True"
                       Opacity="0.95">
                    <ListView ItemsSource="{Binding Jugadores}" BackgroundColor="White">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Padding="12">
                                        <Label Text="{Binding Nombre}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#333" />
                                        <Label Text="{Binding Listo}"
                                               FontSize="14"
                                               TextColor="#666" />
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Frame>

                <!-- Mensaje de Error -->
                <Label Text="{Binding LlenoORepetido}"
                       FontSize="16"
                       TextColor="#D9534F"
                       HorizontalOptions="Center"
                       FontAttributes="Bold" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
